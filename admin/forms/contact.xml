<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="edit">
        <field
            name="name"
            type="text"
            label="COM_ALFCONTACT_CONTACT_NAME"
            description="COM_ALFCONTACT_CONTACT_NAME_DESC"
			required="true"
            default=""
        />
		<field
            name="email"
            type="textarea"
            label="COM_ALFCONTACT_CONTACT_EMAIL"
            description="COM_ALFCONTACT_CONTACT_EMAIL_DESC"
			required="true"
            default=""
        />
        <field
			name="bcc"
			type="textarea"
			label="COM_ALFCONTACT_CONTACT_BCC"
			description="COM_ALFCONTACT_CONTACT_BCC_DESC"
			default=""
		/>
		<field
            name="prefix"
            type="text"
            label="COM_ALFCONTACT_CONTACT_PREFIX"
            description="COM_ALFCONTACT_CONTACT_PREFIX_DESC"
            default=""
        />
		<field
            name="extra"
            type="textarea"
            label="COM_ALFCONTACT_CONTACT_EXTRA"
            description="COM_ALFCONTACT_CONTACT_EXTRA_DESC"
            default=""
            rows="5"
        />
		<field
            name="defsubject"
            type="text"
            label="COM_ALFCONTACT_CONTACT_DEFAULT_SUBJECT"
            description="COM_ALFCONTACT_CONTACT_DEFAULT_SUBJECT_DESC"
            default=""
        />
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="form-select-color-state"
			default="1"
		>
		<option value="1">JPUBLISHED</option>
		<option value="0">JUNPUBLISHED</option>
		</field>
		<field 
			name="access" 
			type="accesslevel" 
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			filter="UINT"
			validate="options"
		/>
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_ALFCONTACT_CONTACT_LANGUAGE_DESC"
		>
			<option value="*">JALL</option>
		</field>
		<field
            name="id"
            type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
        />
    </fieldset>
</form>
