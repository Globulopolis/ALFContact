<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="contact">
        <field
            name="name"
            type="text"
            label="COM_ALFCONTACT_FORM_FROM"
            required="true"
            default=""
        />
        <field
            name="email"
            type="email"
            label="COM_ALFCONTACT_FORM_EMAIL"
            required="true"
            default=""
            validate="email"
        />
        <field
            name="hr1"
            type="spacer"
            label=""
            hr="true"
            class="w-100"
        />
        <field
            addfieldprefix="Joomla\Component\ALFContact\Administrator\Field"
            name="emailid"
            type="formslist"
            label="COM_ALFCONTACT_FORM_TO"
        />
        <field
            name="subject"
            type="text"
            label="COM_ALFCONTACT_FORM_SUBJECT"
            required="true"
            default=""
        />
        <field
            name="message"
            type="textarea"
            label="COM_ALFCONTACT_FORM_MESSAGE"
            required="true"
            rows="5"
            default=""
        />
        <field
            name="copy"
            type="checkbox"
            label="COM_ALFCONTACT_FORM_COPYTOME"
            labelclass="col-11 order-1"
        />
        <field
            name="gpdr_consent"
            type="checkbox"
            label=""
            labelclass="col-11 order-1 fw-semibold"
            translateLabel="false"
            required="true"
        />
        <field
            name="extravalues"
            type="hidden"
        />
        <field
            name="emailto_id"
            type="hidden"
            default="99"
        />
        <field
            name="captcha"
            type="captcha"
            label="COM_ALFCONTACT_FORM_CAPTCHA"
            validate="captcha"
            namespace="contact"
        />
    </fieldset>
</form>
